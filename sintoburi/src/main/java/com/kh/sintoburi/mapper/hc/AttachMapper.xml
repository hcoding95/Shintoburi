<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
  <!-- 매퍼 인터페이스 경로와 같게 지정  -->
  <mapper namespace="com.kh.sintoburi.mapper.hc.AttachMapper">
  
  	<insert id="insert">
  		insert into tbl_attach(uuid, fileName, uploadPath, image, blogNo)
  		values (#{uuid}, #{fileName}, #{uploadPath}, #{image}, #{blogNo})
  	</insert>
  	
  	<select id="getAttachList" resultType="AttachFileDto">
  		select * from tbl_attach
  		where bno = #{blogNo}
  	</select>
  	
  	<delete id="delete">
  		delete from tbl_attach
  		where bno = #{blogNo}
  	</delete>
  	
  	<select id="getOldAttachList" resultType="AttachFileDto">
  		select * from tbl_attach
		where uploadPath = 'E:/upload/' ||
		 (select TO_CHAR(sysdate - 1, 'YYYY/MM/DD') from dual)
		 <!-- (select sysdate - 1 from dual); -->
  	</select>
  	
  	
  
  </mapper>