<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.kh.sintoburi.mapper.hn.NoticeMapper">

	<!-- 공지사항 목록 -->

	<select id="selectNotice" resultType="NoticeVo">
		select * from tbl_notice
		order by n_no desc
	</select>
	
	<!-- 공지사항 한개데이터 -->
	<select id="selectByNno" resultType="NoticeVo">
		select * from tbl_notice
		where n_no = #{n_no}
	
	</select>
	
	<!-- 공지사항 등록 -->
	<insert id="insertNotice">
		insert into tbl_notice (n_no,title,content)
		values (seq_notice.nextVal,#{title},#{content})
	</insert>

	<!-- 공지사항 수정 -->
	<update id="updateNotice">
		update tbl_notice set
		title = #{title},
		content = #{content}
		where n_no = #{n_no}
	</update>


	<!-- 공지사항 삭제 -->
	<delete id="deleteNotice">
		delete from tbl_notice
		where n_no = #{n_no}
	</delete>
</mapper>