Create Table Tbl_Blog_Tag(
    Blog_No Number(10) References Tbl_Blog(Blog_No),
    Product_Id Number(10) References Tbl_Product(Product_Id),
    Constraint Pk_Blog_Tag Primary Key (Blog_No, Product_Id)
);
